#!/bin/bash

set -e

DIR=$(cd $(dirname "$0"); pwd)

if [[ "$1" = "--force" ]] || ! git diff-index --quiet --cached HEAD -- css/colors.css css/dark-mode-adjustments.css ; then
	php $DIR/build_css.php
	git add .
fi

if [[ "$1" = "--force" ]] || ! git diff-index --quiet --cached HEAD -- css/colors.css css/initial.css css/dark-mode.css js/gw-inline.js js/darkmode-inline.js ; then
	php $DIR/build_includes.php
	git add .
fi
